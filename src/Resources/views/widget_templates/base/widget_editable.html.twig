<div id="{{ config.type }}-{{ widget.id }}" class="widget {{ config.type }}{% if widget.hidden %} hidden-widget{% endif %}"
     data-widget-editor
     data-widget-id="{{ widget.id }}"
     data-widget-type="{{ config.type }}"
     data-layout-widget="{{ config.isLayout ? 'true' : 'false' }}"
     data-root-path="{{ path('content_widgets_root')|trim('/', 'right') }}"
     draggable="true">
    <div data-widget-toolbar>
        <div class="float-left">
            <h6><strong>{{ config.type }}</strong></h6>
        </div>
        <div class="float-right">
            <div class="button-group small align-right">
                <a class="button hollow top" title="Move" data-move-widget><i class="fa fa-arrows-alt"></i></a>
                <a class="button hollow top toggle-hidden{% if widget.hidden %} widget-is-hidden{% endif %}"
                   title="{{ widget.hidden ? 'Show' : 'Hide' }}"
                   data-toggle-hidden>
                    <i class="fa fa-eye icon-show"></i>
                    <i class="fa fa-eye-slash icon-hide"></i>
                </a>
                <a class="button hollow top" title="Edit" data-edit-widget><i class="fa fa-edit"></i></a>
                <a class="button hollow alert top" title="Delete" data-delete-widget><i class="fa fa-times"></i></a>
            </div>
        </div>
    </div>
